{
  "expo": {
    "name": "CTRL+ALT+BLOCK",
    "slug": "ctrlaltblock",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#080F20"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ctrlaltblock.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to securely access CTRL+ALT+BLOCK",
        "NSCameraUsageDescription": "Camera access is needed for profile photos and ritual documentation",
        "NSMicrophoneUsageDescription": "Microphone access is needed for voice journaling features",
        "NSPhotoLibraryUsageDescription": "Photo library access is needed for sharing your healing progress",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#080F20"
      },
      "package": "com.ctrlaltblock.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#EC4899",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Use Face ID to securely access CTRL+ALT+BLOCK"
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "5ab247f8-bca5-4374-8485-f1867ac907bf"
      }
    },
    "owner": "ctrlaltblock"
  }
}
