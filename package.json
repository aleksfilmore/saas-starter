{
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "node scripts/prestart.js && npx next dev -p 3001",
    "build": "node scripts/build-wrapper.mjs",
    "start": "next start",
    "lint": "next lint",
    "lint:unused": "node scripts/lint-unused.cjs",
    "lint:unused:fix": "node scripts/lint-unused-fix.cjs",
    "lint:unused:report": "node scripts/report-unused.js",
    "db:recover:core": "node scripts/recover-core-tables.cjs",
  "db:restore:core": "tsx scripts/restore-core-tables.ts",
  "deploy:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy-prod.ps1",
    "schema:check": "node --loader tsx scripts/schema-startup-check.ts",
    "test:production": "npx tsx scripts/production-test.ts",
    "db:setup": "npx tsx lib/db/setup.ts",
    "db:seed": "npx tsx lib/db/seed.ts",
    "db:seed:swap-badges": "npx tsx scripts/seed-swap-badges.ts",
    "badges:backfill:rarity": "npx tsx scripts/backfill-badge-rarity-kind.ts",
    "badges:sync": "npx tsx scripts/sync-badges.ts",
    "badges:columns": "npx tsx scripts/check-badges-columns.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node scripts/check-db-env.js && drizzle-kit migrate",
  "db:studio": "drizzle-kit studio",
  "db:migrate:manual": "node scripts/apply-sql-migrations.js",
  "db:snapshot:baseline": "node scripts/generate-baseline-migration.js",
  "db:journal:generate": "node scripts/generate-drizzle-journal.js",
    "db:verify:clean": "tsx scripts/verify-clean-migrations.ts",
    "email:test": "npx tsx lib/test-email.ts",
    "mobile:setup": "cd mobile && npm install",
    "mobile:start": "cd mobile && expo start",
    "mobile:ios": "cd mobile && expo start --ios",
    "mobile:android": "cd mobile && expo start --android",
    "mobile:build:ios": "cd mobile && eas build --platform ios",
    "mobile:build:android": "cd mobile && eas build --platform android",
    "setup:all": "npm install && npm run mobile:setup",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "ghost:setup": "node scripts/ghost-backfill.js && node scripts/timezone-normalize.js"
  },
  "scriptsExtra": {
    "README": "ghost:setup combines ghost assignment backfill and optional timezone normalization"
  },
